<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="#fff6b2">

    <View style="@style/hBorder"/>

    <LinearLayout
            android:id="@+id/bpp3_header"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#DBDBFF"
            android:gravity="right"
            android:orientation="horizontal"
            android:layout_weight="1">

        <org.sayesaman.customeviews.CustomTextView
                android:id="@+id/bpp3_header5"
                android:text="مبلغ (ريال)"
                custom:font="Titr"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal|right"
                android:layout_marginRight="5dp"/>

        <View style="@style/vBorder"/>

        <org.sayesaman.customeviews.CustomTextView
                android:id="@+id/bpp3_header4"
                android:text="کالا"
                custom:font="Titr"
                android:layout_width="70dp"
                android:layout_height="fill_parent"
                android:gravity="center_vertical|center_horizontal"/>

        <View style="@style/vBorder"/>

        <org.sayesaman.customeviews.CustomTextView
                android:id="@+id/bpp3_header3"
                android:layout_width="86dp"
                android:layout_height="fill_parent"
                android:text="اقلام"
                custom:font="Titr"
                android:gravity="center_vertical|center_horizontal"/>

        <View style="@style/vBorder"/>

        <org.sayesaman.customeviews.CustomTextView
                android:id="@+id/bpp3_header2"
                android:layout_width="266dp"
                android:layout_height="fill_parent"
                android:text="مشتری"
                custom:font="Titr"
                android:gravity="center_vertical|center_horizontal"/>

        <View style="@style/vBorder"/>

        <org.sayesaman.customeviews.CustomTextView
                android:id="@+id/bpp3_header1"
                android:text="رديف"
                custom:font="Titr"
                android:layout_width="50dp"
                android:layout_height="fill_parent"
                android:gravity="center_vertical|center_horizontal"/>

        <View style="@style/vBorder"/>
    </LinearLayout>
    <View style="@style/hBorder"/>

</LinearLayout>