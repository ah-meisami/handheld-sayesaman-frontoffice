<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
    <!--================================================================================================================================-->
    <Spinner
            android:id="@+id/spinner1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/spinner_title"
            android:gravity="right"
            android:layout_gravity="right"/>"
    <!--================================================================================================================================-->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:layout_gravity="center"
                  android:orientation="horizontal">
        <TextView
                android:layout_height="wrap_content"
                android:layout_width="100dp"
                android:text="قیمت (ريال)"
                android:gravity="center"
                android:background="#D9CED2"
                android:textColor="#000000"/>
        <TextView
                android:layout_height="wrap_content"
                android:layout_width="550dp"
                android:text="نام کالا"
                android:gravity="center"
                android:background="#D9CED2"
                android:textColor="#000000"/>

        <TextView
                android:layout_height="wrap_content"
                android:layout_width="150dp"
                android:text="گروه فرعی"
                android:gravity="center"
                android:background="#D9CED2"
                android:textColor="#000000"/>
        <TextView
                android:layout_height="wrap_content"
                android:layout_width="150dp"
                android:text="گروه اصلی"
                android:gravity="center"
                android:background="#D9CED2"
                android:textColor="#000000"/>
        <TextView
                android:layout_height="wrap_content"
                android:layout_width="150dp"
                android:text="تولید کننده"
                android:gravity="center"
                android:background="#D9CED2"
                android:textColor="#000000"/>
        <TextView
                android:layout_height="wrap_content"
                android:layout_width="100dp"
                android:text="کد"
                android:gravity="center"
                android:background="#D9CED2"
                android:textColor="#000000"/>
        <TextView
                android:layout_height="wrap_content"
                android:layout_width="60dp"
                android:text="ردیف"
                android:gravity="center"
                android:background="#D9CED2"
                android:textColor="#000000"/>
    </LinearLayout>
    <!--================================================================================================================================-->
    <GridView
            android:id="@+id/gridView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_gravity="right"/>
    <!--================================================================================================================================-->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:layout_gravity="center"
                  android:orientation="horizontal">

        <TextView
                android:id="@+id/textViewRecordCount"
                android:layout_height="20dp"
                android:layout_width="1180dp"
                android:text="0"
                android:gravity="right"
                android:layout_gravity="center_horizontal"
                android:background="#D9CED2"
                android:textColor="#000000"/>

        <TextView
                android:layout_height="20dp"
                android:layout_width="wrap_content"
                android:text="تعداد رکورد  = "
                android:gravity="right"
                android:layout_gravity="center_horizontal"
                android:background="#D9CED2"
                android:textColor="#000000"/>
    </LinearLayout>
    <!--================================================================================================================================-->
</LinearLayout>

