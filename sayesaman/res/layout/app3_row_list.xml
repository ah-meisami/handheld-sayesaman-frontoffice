<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_selector"
                android:orientation="horizontal"
                android:padding="5dip">

    <LinearLayout
            android:id="@+id/thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dip"
            android:padding="3dip"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="true">

        <ImageView
                android:id="@+id/goodsGroupImage"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_gravity="top"
                android:contentDescription="@string/app_name"
                android:src="@drawable/image_not_found"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>
    </LinearLayout>

    <org.sayesaman.customeviews.CustomTextView
            android:id="@+id/goodsQtyActive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="false"
            android:layout_alignTop="@+id/imageView1"
            android:gravity="right"
            android:text="20"
            android:layout_marginRight="5dip"
            android:textSize="10dip"
            android:textColor="#44bcc9"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"/>

    <org.sayesaman.customeviews.CustomTextView
            android:id="@+id/rownum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dip"
            android:layout_centerVertical="true"
            android:paddingBottom="9dip"
            android:text="1"
            android:textColor="#000000"
            android:textSize="14dip"
            android:layout_alignRight="@+id/thumbnail"/>

    <ImageView
            android:id="@+id/imageView1"
            android:contentDescription="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/navigation_previous_item"/>

    <org.sayesaman.customeviews.CustomTextView
            android:id="@+id/goodsGroupName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/goodsGroupImage"
            android:layout_toLeftOf="@+id/thumbnail"
            android:layout_marginLeft="75dip"
            android:layout_centerVertical="true"
            android:paddingBottom="9dip"
            android:text="گروه شربت"
            android:textColor="#000000"
            android:textSize="20dip"/>
</RelativeLayout>