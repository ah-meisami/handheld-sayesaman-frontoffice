<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/dialog_parent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#998b8b8b">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/product_parent_background">

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true">

            <RelativeLayout
                    android:id="@+id/dialog_order_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/relativeLayout2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/relativeLayout1">
                <!---->
                <!---->
                <!---->
                <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        >

                    <!-- اين قست به اين دليل است که در داخل اسکرول ويوو فقط يک آيتم ميشه گذاشت و بقيه آيتم ها را داخل اين لاينر ميگذاريم -->

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginLeft="10dp">

                            <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:orientation="horizontal"
                                    android:id="@+id/panel_top">

                                <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="250dp"
                                        android:layout_height="250dp"
                                        android:gravity="center_vertical|center_horizontal"
                                        android:id="@+id/panel_left"
                                        android:background="@drawable/edittext_rounded_corners"
                                        android:layout_marginRight="10dp">

                                    <ImageView
                                            android:layout_width="fill_parent"
                                            android:layout_height="fill_parent"
                                            android:id="@+id/dialog_cust_image"
                                            android:src="@drawable/app7_user"
                                            android:scaleType="fitCenter"/>
                                </LinearLayout>

                                <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        android:id="@+id/panel_right"
                                        android:focusableInTouchMode="false">

                                    <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="50dp"
                                            android:orientation="horizontal"
                                            android:gravity="right">

                                        <org.sayesaman.customeviews.CustomTextView
                                                android:id="@+id/dialog_cust_code"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:background="@drawable/edittext_rounded_corners"
                                                android:gravity="center_vertical|right"
                                                android:minHeight="35dp"
                                                android:minWidth="250dp"
                                                android:paddingLeft="10dp"
                                                android:paddingRight="10dp"
                                                android:text="12345486"
                                                android:layout_weight="1"
                                                style="2"
                                                android:textColor="#010101"
                                                android:textSize="17dp"
                                                android:textStyle="bold"
                                                android:typeface="serif"/>

                                        <org.sayesaman.customeviews.CustomTextView
                                                android:id="@+id/dialog_cust_code_"
                                                android:layout_width="150dp"
                                                android:layout_height="wrap_content"
                                                android:gravity="center_vertical|right"
                                                android:minHeight="35dp"
                                                android:minWidth="200dp"
                                                android:paddingLeft="10dp"
                                                android:paddingRight="10dp"
                                                android:text="کد مشتري"
                                                android:textColor="#9c1c13"
                                                android:textSize="17dp"/>
                                    </LinearLayout>

                                    <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="50dp"
                                            android:gravity="center_vertical|right"
                                            android:orientation="horizontal">

                                        <org.sayesaman.customeviews.CustomTextView
                                                android:id="@+id/dialog_cust_name"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:background="@drawable/edittext_rounded_corners"
                                                android:gravity="center_vertical|right"
                                                android:minHeight="35dp"
                                                android:minWidth="250dp"
                                                android:paddingLeft="10dp"
                                                android:paddingRight="10dp"
                                                android:text="حميد قصابي"
                                                android:layout_weight="1"
                                                android:textColor="#010101"
                                                android:textSize="17dp"/>

                                        <org.sayesaman.customeviews.CustomTextView
                                                android:id="@+id/dialog_cust_name_"
                                                android:layout_width="150dp"
                                                android:layout_height="wrap_content"
                                                android:gravity="center_vertical|right"
                                                android:minHeight="35dp"
                                                android:minWidth="200dp"
                                                android:paddingLeft="10dp"
                                                android:paddingRight="10dp"
                                                android:text="نام مشتري"
                                                android:textColor="#9c1c13"
                                                android:textSize="17dp"/>
                                    </LinearLayout>

                                    <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="50dp"
                                            android:gravity="center_vertical|right"
                                            android:orientation="horizontal">

                                        <org.sayesaman.customeviews.CustomTextView
                                                android:id="@+id/dialog_cust_real_name"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:background="@drawable/edittext_rounded_corners"
                                                android:gravity="center_vertical|right"
                                                android:minHeight="35dp"
                                                android:minWidth="250dp"
                                                android:paddingLeft="10dp"
                                                android:paddingRight="10dp"
                                                android:text="عمده فروشي قصابي"
                                                android:layout_weight="1"
                                                android:textColor="#010101"
                                                android:textSize="17dp"/>

                                        <org.sayesaman.customeviews.CustomTextView
                                                android:id="@+id/dialog_cust_real_name_"
                                                android:layout_width="150dp"
                                                android:layout_height="wrap_content"
                                                android:gravity="center_vertical|right"
                                                android:minHeight="35dp"
                                                android:minWidth="200dp"
                                                android:paddingLeft="10dp"
                                                android:paddingRight="10dp"
                                                android:text="نام فروشگاه"
                                                android:textColor="#9c1c13"
                                                android:textSize="17dp"/>
                                    </LinearLayout>

                                    <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="50dp"
                                            android:gravity="center_vertical|right"
                                            android:orientation="horizontal">

                                        <org.sayesaman.customeviews.CustomTextView
                                                android:id="@+id/dialog_cust_phone"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:background="@drawable/edittext_rounded_corners"
                                                android:gravity="center_vertical|right"
                                                android:minHeight="35dp"
                                                android:minWidth="250dp"
                                                android:paddingLeft="10dp"
                                                android:paddingRight="10dp"
                                                android:text="021-22255366"
                                                android:layout_weight="1"
                                                android:textColor="#010101"
                                                android:textSize="17dp"
                                                android:textStyle="bold"
                                                android:typeface="serif"/>

                                        <org.sayesaman.customeviews.CustomTextView
                                                android:id="@+id/dialog_cust_phone_"
                                                android:layout_width="150dp"
                                                android:layout_height="wrap_content"
                                                android:gravity="center_vertical|right"
                                                android:minHeight="35dp"
                                                android:minWidth="200dp"
                                                android:paddingLeft="10dp"
                                                android:paddingRight="10dp"
                                                android:text="تلفن"
                                                android:textColor="#9c1c13"
                                                android:textSize="17dp"/>

                                    </LinearLayout>

                                    <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="50dp"
                                            android:orientation="horizontal"
                                            android:gravity="bottom">

                                        <org.sayesaman.customeviews.CustomTextView
                                                android:id="@+id/dialog_cust_mobile"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:background="@drawable/edittext_rounded_corners"
                                                android:gravity="center_vertical|right"
                                                android:minHeight="35dp"
                                                android:minWidth="250dp"
                                                android:paddingLeft="10dp"
                                                android:paddingRight="10dp"
                                                android:text="0912-1122334"
                                                android:layout_weight="1"
                                                android:textColor="#010101"
                                                android:textSize="17dp"
                                                android:textStyle="bold"
                                                android:typeface="serif"/>

                                        <org.sayesaman.customeviews.CustomTextView
                                                android:id="@+id/dialog_cust_mobile_"
                                                android:layout_width="150dp"
                                                android:layout_height="wrap_content"
                                                android:gravity="center_vertical|right"
                                                android:minHeight="35dp"
                                                android:minWidth="200dp"
                                                android:paddingLeft="10dp"
                                                android:paddingRight="10dp"
                                                android:text="موبايل"
                                                android:textColor="#9c1c13"
                                                android:textSize="17dp"/>

                                    </LinearLayout>
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:gravity="center_vertical|right"
                                    android:orientation="horizontal"
                                    android:id="@+id/panel_path">

                                <org.sayesaman.customeviews.CustomTextView
                                        android:id="@+id/dialog_cust_path"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/edittext_rounded_corners"
                                        android:gravity="center_vertical|right"
                                        android:minHeight="35dp"
                                        android:minWidth="250dp"
                                        android:paddingLeft="10dp"
                                        android:paddingRight="10dp"
                                        android:text="مسیر پيرسرابي"
                                        android:layout_weight="1"
                                        android:textColor="#010101"
                                        android:textSize="17dp"/>

                                <org.sayesaman.customeviews.CustomTextView
                                        android:id="@+id/dialog_cust_path_"
                                        android:layout_width="150dp"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical|right"
                                        android:minHeight="35dp"
                                        android:minWidth="200dp"
                                        android:paddingLeft="10dp"
                                        android:paddingRight="10dp"
                                        android:text="مسير فروش"
                                        android:textColor="#9c1c13"
                                        android:textSize="17dp"/>
                            </LinearLayout>

                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:gravity="center_vertical|right"
                                    android:orientation="horizontal"
                                    android:id="@+id/panel_address">

                                <org.sayesaman.customeviews.CustomTextView
                                        android:id="@+id/dialog_cust_address"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/edittext_rounded_corners"
                                        android:gravity="center_vertical|right"
                                        android:minHeight="35dp"
                                        android:minWidth="250dp"
                                        android:paddingLeft="10dp"
                                        android:paddingRight="10dp"
                                        android:text="تهران-خ بهارستان-خ ملت- عمده فروشان بازار"
                                        android:layout_weight="1"
                                        android:textColor="#010101"
                                        android:textSize="17dp"/>

                                <org.sayesaman.customeviews.CustomTextView
                                        android:id="@+id/dialog_cust_address_"
                                        android:layout_width="150dp"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical|right"
                                        android:minHeight="35dp"
                                        android:minWidth="200dp"
                                        android:paddingLeft="10dp"
                                        android:paddingRight="10dp"
                                        android:text="آدرس"
                                        android:textColor="#9c1c13"
                                        android:textSize="17dp"/>
                            </LinearLayout>

                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:gravity="center_vertical|right"
                                    android:orientation="horizontal"
                                    android:id="@+id/panel_pelak">

                                <org.sayesaman.customeviews.CustomTextView
                                        android:id="@+id/dialog_cust_pelak"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/edittext_rounded_corners"
                                        android:gravity="center_vertical|right"
                                        android:minHeight="35dp"
                                        android:minWidth="250dp"
                                        android:paddingLeft="10dp"
                                        android:paddingRight="10dp"
                                        android:text="50"
                                        android:layout_weight="1"
                                        android:textColor="#010101"
                                        android:textSize="17dp"
                                        android:textStyle="bold"
                                        android:typeface="serif"/>

                                <org.sayesaman.customeviews.CustomTextView
                                        android:id="@+id/dialog_cust_pelak_"
                                        android:layout_width="150dp"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical|right"
                                        android:minHeight="35dp"
                                        android:minWidth="200dp"
                                        android:paddingLeft="10dp"
                                        android:paddingRight="10dp"
                                        android:text="رديف ويزيت"
                                        android:textColor="#9c1c13"
                                        android:textSize="17dp"/>

                            </LinearLayout>

                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:gravity="center_vertical|right"
                                    android:orientation="horizontal"
                                    android:id="@+id/panel_cust_act">

                                <org.sayesaman.customeviews.CustomTextView
                                        android:id="@+id/dialog_cust_act"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/edittext_rounded_corners"
                                        android:gravity="center_vertical|right"
                                        android:minHeight="35dp"
                                        android:minWidth="250dp"
                                        android:paddingLeft="10dp"
                                        android:paddingRight="10dp"
                                        android:text="عمده فروشي"
                                        android:layout_weight="1"
                                        android:textColor="#010101"
                                        android:textSize="17dp"/>

                                <org.sayesaman.customeviews.CustomTextView
                                        android:id="@+id/dialog_cust_act_"
                                        android:layout_width="150dp"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical|right"
                                        android:minHeight="35dp"
                                        android:minWidth="200dp"
                                        android:paddingLeft="10dp"
                                        android:paddingRight="10dp"
                                        android:text="نوع فعاليت"
                                        android:textColor="#9c1c13"
                                        android:textSize="17dp"/>
                            </LinearLayout>

                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:gravity="center_vertical|right"
                                    android:orientation="horizontal"
                                    android:id="@+id/panel_cust_ctgr">

                                <org.sayesaman.customeviews.CustomTextView
                                        android:id="@+id/dialog_cust_ctgr"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/edittext_rounded_corners"
                                        android:gravity="center_vertical|right"
                                        android:minHeight="35dp"
                                        android:minWidth="250dp"
                                        android:paddingLeft="10dp"
                                        android:paddingRight="10dp"
                                        android:text="A"
                                        android:layout_weight="1"
                                        android:textColor="#010101"
                                        android:textSize="17dp"
                                        android:textStyle="bold"
                                        android:typeface="serif"/>

                                <org.sayesaman.customeviews.CustomTextView
                                        android:id="@+id/dialog_cust_ctgr_"
                                        android:layout_width="150dp"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical|right"
                                        android:minHeight="35dp"
                                        android:minWidth="200dp"
                                        android:paddingLeft="10dp"
                                        android:paddingRight="10dp"
                                        android:text="گروه 1"
                                        android:textColor="#9c1c13"
                                        android:textSize="17dp"/>
                            </LinearLayout>

                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:gravity="center_vertical|right"
                                    android:orientation="horizontal"
                                    android:id="@+id/panel_cust_level">

                                <org.sayesaman.customeviews.CustomTextView
                                        android:id="@+id/dialog_cust_level"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/edittext_rounded_corners"
                                        android:gravity="center_vertical|right"
                                        android:minHeight="35dp"
                                        android:minWidth="250dp"
                                        android:paddingLeft="10dp"
                                        android:paddingRight="10dp"
                                        android:text="عمده فروشي"
                                        android:layout_weight="1"
                                        android:textColor="#010101"
                                        android:textSize="17dp"/>

                                <org.sayesaman.customeviews.CustomTextView
                                        android:id="@+id/dialog_cust_level_"
                                        android:layout_width="150dp"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical|right"
                                        android:minHeight="35dp"
                                        android:minWidth="200dp"
                                        android:paddingLeft="10dp"
                                        android:paddingRight="10dp"
                                        android:text="گروه 2"
                                        android:textColor="#9c1c13"
                                        android:textSize="17dp"/>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                </ScrollView>
                <!---->
                <!---->
                <!---->
            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/relativeLayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/dilog_bottom_side_border"
                    android:paddingBottom="10dp">

                <org.sayesaman.customeviews.CustomTextView
                        android:id="@+id/dialog_order_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:text="مشخصات مشتری"
                        android:textSize="25sp"/>

                <Button
                        android:id="@+id/dialog_order_close"
                        style="@style/back_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/stop3"
                        android:text=""/>
            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/relativeLayout2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/dilog_top_side_border"
                    android:gravity="center_vertical|center_horizontal">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical|center_horizontal">
                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>