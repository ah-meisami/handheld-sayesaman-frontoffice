<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tableLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:layout_gravity="right"
    android:gravity="right" >

    <LinearLayout
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <RelativeLayout
            android:id="@+id/project_address_new_map_layout"
            android:layout_width="450dp"
            android:layout_height="450dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp" >
        </RelativeLayout>

        <TableLayout
            android:id="@+id/tableLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right" >

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical" >

                <EditText
                    android:id="@+id/customEditText1"
                    style="@style/txt_account_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10" />

                <TextView
                    android:id="@+id/textView1"
                    style="@style/edit_account_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="کدپستی :" />

                <EditText
                    android:id="@+id/customEditText04"
                    style="@style/txt_account_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10" />

                <TextView
                    android:id="@+id/TextView03"
                    style="@style/edit_account_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="نام آدرس :" />
            </TableRow>

            <TableRow
                android:id="@+id/TableRow04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:paddingTop="10dp" >

                <EditText
                    android:id="@+id/customEditText04"
                    style="@style/txt_account_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10" />

                <TextView
                    android:id="@+id/TextView04"
                    style="@style/edit_account_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="صندوق پستی :" />

                <com.example.sktheme.ComboBox
                    android:id="@+id/customEditText03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10" />

                <TextView
                    android:id="@+id/TextView05"
                    style="@style/edit_account_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="استان :" />
            </TableRow>

            <TableRow
                android:id="@+id/TableRow01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:paddingTop="10dp" >

                <EditText
                    android:id="@+id/EditText01"
                    style="@style/txt_account_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10" />

                <TextView
                    android:id="@+id/TextView01"
                    style="@style/edit_account_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="شماره تلفن 1 :" />

                <com.example.sktheme.ComboBox
                    android:id="@+id/EditText02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10" />

                <TextView
                    android:id="@+id/TextView02"
                    style="@style/edit_account_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="شهر :" />
            </TableRow>

            <TableRow
                android:id="@+id/TableRow06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:paddingTop="10dp" >

                <EditText
                    android:id="@+id/EditText03"
                    style="@style/txt_account_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10" />

                <TextView
                    android:id="@+id/TextView06"
                    style="@style/edit_account_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="شماره تلفن 2 :" />

                <EditText
                    android:id="@+id/EditText04"
                    style="@style/txt_account_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10" />

                <TextView
                    android:id="@+id/TextView07"
                    style="@style/edit_account_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="محله شهری :" />
            </TableRow>

            <TableRow
                android:id="@+id/TableRow08"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:paddingTop="10dp" >

                <EditText
                    android:id="@+id/EditText05"
                    style="@style/txt_account_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10" />

                <TextView
                    android:id="@+id/TextView08"
                    style="@style/edit_account_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="شماره تلفن 3 :" />

                <EditText
                    android:id="@+id/EditText06"
                    style="@style/txt_account_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10" />

                <TextView
                    android:id="@+id/TextView09"
                    style="@style/edit_account_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="خیابان اصلی :" />
            </TableRow>

            <TableRow
                android:id="@+id/TableRow02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:paddingTop="10dp" >

                <EditText
                    android:id="@+id/EditText07"
                    style="@style/txt_account_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10" >

                    <requestFocus />
                </EditText>

                <TextView
                    android:id="@+id/TextView11"
                    style="@style/edit_account_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="شماره فکس :" />

                <EditText
                    android:id="@+id/EditText08"
                    style="@style/txt_account_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10" />

                <TextView
                    android:id="@+id/TextView10"
                    style="@style/edit_account_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="خیابان فرعی :" />
            </TableRow>

            <TableRow
                android:id="@+id/TableRow03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                android:paddingTop="10dp" >

                <TextView
                    android:id="@+id/TextView13"
                    style="@style/edit_account_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_span="2" />

                <EditText
                    android:id="@+id/EditText10"
                    style="@style/txt_account_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10" />

                <TextView
                    android:id="@+id/TextView13"
                    style="@style/edit_account_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="پلاک / واحد :" />
            </TableRow>

            <TableRow
                android:id="@+id/TableRow05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right|top"
                android:paddingTop="10dp" >

                <EditText
                    android:id="@+id/EditText11"
                    style="@style/txt_account_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_span="3"
                    android:ems="10"
                    android:minHeight="90dp" />

                <TextView
                    android:id="@+id/TextView14"
                    style="@style/edit_account_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="توضیحات :" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp" >

        <Button
            android:id="@+id/popup_dismiss"
            style="@style/buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="انصراف" />

        <Button
            android:id="@+id/button2"
            style="@style/buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="پاک کردن" />

        <Button
            android:id="@+id/button1"
            style="@style/buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ثبت" />
    </LinearLayout>

</TableLayout>