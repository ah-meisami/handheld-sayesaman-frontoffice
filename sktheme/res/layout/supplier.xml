<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/supplier_buttom_menu_border" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp" >

    <ImageView
        android:id="@+id/imgview_suppliyer_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/supplier_check_box"
        android:src="@drawable/no_pic1" />

    <TextView
        android:id="@+id/txtview_suppliyer_type"
        style="@style/txt_Suppliyer_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/txtview_suppliyer_neme"
        android:layout_below="@+id/txtview_suppliyer_neme"
        android:text="سهامی خاص"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/txtview_suppliyer_neme"
        style="@style/txt_Suppliyer_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/imgview_suppliyer_image"
        android:text="نام تولید کننده"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txtview_suppliyer_is_suppliyer"
        style="@style/txt_Suppliyer_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/txtview_suppliyer_type"
        android:layout_below="@+id/txtview_suppliyer_type"
        android:layout_marginTop="10dp"
        android:text="تولید کننده"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <RelativeLayout
        android:id="@+id/left_menu"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingBottom="10dp" >

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/supplier_left_menu_border" >

        <ImageButton
            android:id="@+id/imageButton1"
            style="@style/imagebuttonStyle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/location" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageButton1"
            android:layout_toLeftOf="@+id/imageButton1"
            android:gravity="right|fill_vertical"
            android:text="نمایش بر\nروی نقشه" />

        <ImageButton
            android:id="@+id/ImageButton01"
            style="@style/imagebuttonStyle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignRight="@+id/imageButton1"
            android:layout_below="@+id/imageButton1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/rating" />

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ImageButton01"
            android:layout_toLeftOf="@+id/ImageButton01"
            android:gravity="right|fill_vertical"
            android:text="رتبه" />

        <ImageButton
            android:id="@+id/ImageButton02"
            style="@style/imagebuttonStyle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignRight="@+id/imageButton1"
            android:layout_below="@+id/ImageButton01"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/catalog_ico" />

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ImageButton02"
            android:layout_toLeftOf="@+id/ImageButton02"
            android:gravity="right|fill_vertical"
            android:text="کاتالوگ" />

        
        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/txt_supplier_item_groups"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/textView1"
        android:layout_toRightOf="@+id/left_menu"
        android:linksClickable="true"
        android:text="گروه کالاهای تامین کننده"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColorLink="#ff0000ff" />

    <Button
        android:id="@+id/btn_suppliyer_show_all"
        style="@style/buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgview_suppliyer_image"
        android:layout_alignLeft="@+id/txt_supplier_item_groups"
        android:text="همه ی کالا های این شرکت"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <CheckBox
        android:id="@+id/supplier_check_box"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:button="@drawable/checkbox_bg" />

    <Button
        android:id="@+id/supplier_badger"
        style="@style/badger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/imgview_suppliyer_image"
        android:layout_alignTop="@+id/imgview_suppliyer_image"
        android:text="0" />

</RelativeLayout>
</RelativeLayout>