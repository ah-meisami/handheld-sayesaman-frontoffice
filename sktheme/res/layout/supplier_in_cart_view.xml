<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/supplier_buttom_menu_border"
        android:paddingBottom="10dp" >

    <ImageView
        android:id="@+id/imgview_suppliyer_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/supplier_check_box"
        android:src="@drawable/no_pic1" />

    <TextView
        android:id="@+id/txtview_suppliyer_type"
        style="@style/txt_Suppliyer_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/txtview_suppliyer_neme"
        android:layout_below="@+id/txtview_suppliyer_neme"
        android:layout_marginLeft="20dp"
        android:text="سهامی خاص"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/txtview_suppliyer_neme"
        style="@style/txt_Suppliyer_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/imgview_suppliyer_image"
        android:text="نام تولید کننده"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txt_supplier_item_groups"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtview_suppliyer_neme"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:linksClickable="true"
        android:text="گروه کالاهای تامین کننده"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColorLink="#ff0000ff" />

    <CheckBox
        android:id="@+id/supplier_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:button="@drawable/checkbox_bg"
        android:paddingBottom="25dp"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:paddingTop="25dp" />

    <Button
        android:id="@+id/supplier_badger"
        style="@style/badger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/imgview_suppliyer_image"
        android:layout_alignTop="@+id/imgview_suppliyer_image"
        android:text="0" />

    <TextView
        android:id="@+id/txtview_suppliyer_is_suppliyer"
        style="@style/txt_Suppliyer_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtview_suppliyer_type"
        android:layout_alignBottom="@+id/txtview_suppliyer_type"
        android:layout_toLeftOf="@+id/txtview_suppliyer_type"
        android:text="تولید کننده"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>