<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

<LinearLayout android:orientation="horizontal" >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="300dp"
    android:minWidth="650dp" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <com.ara.numberPicker.NumberPicker
        android:id="@+id/date_picker_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/textView1"
        end_num="31"
        start_num="1"
        value="1" />
    <com.ara.numberPicker.NumberPicker
        android:id="@+id/date_picker_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/date_picker_month"
        end_num="5000"
        start_num="1300"
        value="1392" />
    <com.ara.numberPicker.NumberPicker
        android:id="@+id/date_picker_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/date_picker_day"
        end_num="12"
        start_num="1"
        value="1" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/date_picker_year"
        android:layout_alignLeft="@+id/date_picker_year"
        android:layout_alignRight="@+id/date_picker_year"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="#88ffffff"
        android:gravity="center_horizontal"
        android:text="سال "
        android:textColor="#ff000000" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/date_picker_month"
        android:layout_alignLeft="@+id/date_picker_month"
        android:layout_alignRight="@+id/date_picker_month"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="#88ffffff"
        android:gravity="center_horizontal"
        android:text="ماه "
        android:textColor="#ff000000" />

    <TextView
        android:id="@+id/TextView011"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/date_picker_day"
        android:layout_alignLeft="@+id/date_picker_day"
        android:layout_alignRight="@+id/date_picker_day"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="#88ffffff"
        android:gravity="center_horizontal"
        android:text="روز "
        android:textColor="#ff000000" />

    <com.ara.numberPicker.NumberPicker
        android:id="@+id/date_picker_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/textView1"
        end_num="23"
        start_num="0"
        value="12" >

    </com.ara.numberPicker.NumberPicker>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/date_picker_hour"
        android:text=":"
        android:textColor="#ff000000"
        android:textSize="20sp" />

    <com.ara.numberPicker.NumberPicker
        android:id="@+id/date_picker_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/textView3"
        end_num="59"
        start_num="0"
        value="0" >
    </com.ara.numberPicker.NumberPicker>

    <Button
        android:id="@+id/date_picker_cancel"
        style="@style/buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_picker_day"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/textView1"
        android:text="لغو" />

    <Button
        android:id="@+id/date_picker_ok"
        style="@style/buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/date_picker_cancel"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/textView1"
        android:text="ثبت" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/date_picker_hour"
        android:layout_alignLeft="@+id/date_picker_hour"
        android:layout_alignRight="@+id/date_picker_hour"
        android:background="#88ffffff"
        android:gravity="center_horizontal"
        android:text="ساعت"
        android:textColor="#ff000000" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/date_picker_min"
        android:layout_alignLeft="@+id/date_picker_min"
        android:layout_alignRight="@+id/date_picker_min"
        android:background="#88ffffff"
        android:gravity="center_horizontal"
        android:text="دقیقه"
        android:textColor="#ff000000" />

</RelativeLayout></LinearLayout></TableLayout>