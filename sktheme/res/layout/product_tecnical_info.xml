                    android:layout_height="wrap_content"
                    android:gravity="right" >

                    <TextView
                        android:id="@+id/TextView07"
                        style="@style/table_technical_txt_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

