                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ارتفاع(سانتیمتر):"
                        android:textAppearance="?android:attr/textAppearanceLarge" />
                </TableRow>

                <TableRow
                    android:id="@+id/TableRow09"
                    style="@style/table_technical_row_m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right" >

                    <TextView
                        android:id="@+id/TextView10"
                        style="@style/table_technical_txt_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/TextView11"
                        style="@style/table_technical_txt_m"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="طول(سانتیمتر):"
                        android:textAppearance="?android:attr/textAppearanceLarge" />
                </TableRow>

                <TableRow
                    android:id="@+id/TableRow10"
                    style="@style/table_technical_row_h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/TextView12"
