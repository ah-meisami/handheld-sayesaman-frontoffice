                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/catalog_ico" />

                        <TextView
                            android:id="@+id/txt_lmenu"
                            style="@style/textview.productview_left_side_menu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/img_lmenu"
                            android:gravity="center_horizontal"
                            android:text="کاتالوگ       کالا"
                            android:textColor="#ff909090"
                            android:textSize="20sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        style="@style/productview_left_side_menu_parent"
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/product_view_left_side_selected" >
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/left_menu_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/left_menu_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:id="@+id/product_view_left_side_selected"
                        style="@style/product_view_left_side_selected"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/product_view_seleted_left1"
                        android:visibility="visible" >

                        <ImageView
                            android:id="@+id/img_lmenu"
                            style="@style/productview_left_side_menu"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/help_ico" />

                        <TextView
                            android:id="@+id/txt_lmenu"
                            style="@style/textview.productview_left_side_menu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/img_lmenu"
                            android:gravity="center_horizontal"
                            android:text="راهنمای استفاده"
                            android:textColor="#ff909090"
                            android:textSize="20sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        style="@style/productview_left_side_menu_parent"
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/product_view_left_side_selected" >
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/left_menu_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/left_menu_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:id="@+id/product_view_left_side_selected"
                        style="@style/product_view_left_side_selected"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/product_view_seleted_left1"
                        android:visibility="visible" >

                        <ImageView
                            android:id="@+id/img_lmenu"
                            style="@style/productview_left_side_menu"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/survey_ico" />

                        <TextView
                            android:id="@+id/txt_lmenu"
                            style="@style/textview.productview_left_side_menu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/img_lmenu"
                            android:gravity="center_horizontal"
                            android:text="نقد و       بررسی"
                            android:textColor="#ff909090"
                            android:textSize="20sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        style="@style/productview_left_side_menu_parent"
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/product_view_left_side_selected" >
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/left_menu_5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/left_menu_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:id="@+id/product_view_left_side_selected"
                        style="@style/product_view_left_side_selected"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/product_view_seleted_left1"
                        android:visibility="visible" >

                        <ImageView
                            android:id="@+id/img_lmenu"
                            style="@style/productview_left_side_menu"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/warranty_ico" />

                        <TextView
                            android:id="@+id/txt_lmenu"
                            style="@style/textview.productview_left_side_menu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/img_lmenu"
                            android:gravity="center_horizontal"
                            android:text="شرایط گارانتی"
                            android:textColor="#ff909090"
                            android:textSize="20sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        style="@style/productview_left_side_menu_parent"
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/product_view_left_side_selected" >
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <ImageButton
            android:id="@+id/close_dailog"
            style="@style/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/close"
            android:visibility="gone" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/imgview_forward_prodview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/button_bg"
        android:paddingBottom="30dp"
        android:paddingLeft="5dp"
        android:paddingTop="30dp"
        android:src="@drawable/forward" />

    <ImageButton
        android:id="@+id/imgview_backward_prodview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/button_bg"
        android:paddingBottom="30dp"
        android:paddingRight="5dp"
        android:paddingTop="30dp"
        android:src="@drawable/backward" />

</RelativeLayout>